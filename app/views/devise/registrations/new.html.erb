<div class="row">
  <div class="col-md-5 col-md-offset-3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-header">
      <h4 class="text-center">Sign Up</h4>
    </div>
    <div class="login-form">
      <p><%= devise_error_messages! %></p>

      <div class="form-group">
        <%= f.text_field :username, autofocus: true, :class => "form-control input-hg", :placeholder => "Username" %>
        <span class="form-control-feedback fui-user"></span>
      </div>

      <div class="form-group">
        <%= f.email_field :email, :class => "form-control input-hg", :placeholder => "Email address" %>
        <span class="form-control-feedback fui-mail"></span>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control input-hg", :placeholder => "Password" %>
        <span class="form-control-feedback fui-lock"></span>
        <% if @validatable %>
        <small><%= @minimum_password_length %> characters minimum are required</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-hg", :placeholder => "Password Confirmation" %>
        <span class="form-control-feedback fui-lock"></span>
      </div>

      <div class="form-group">
        <%= f.submit "Sign Up", :class => "btn btn-hg btn-info btn-block btn-embossed" %>
      </div>

      <div class="form-group">
        <p><small>Already have an account? <%= link_to "Sign in here", login_path %></small></p>
        <p><small><%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path %></small></p>
      </div>

    </div>
    <% end %>

  </div>
</div>